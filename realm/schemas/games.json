{
  "bsonType": "object",
  "title": "Game",
  "required": ["_id", "name", "participantIds", "started", "turn", "code", "guesses"],
  "properties": {
    "_id": {
      "bsonType": "objectId"
    },
    "name": {
      "bsonType": "string",
      "minLength": 1,
      "maxLength": 20
    },
    "participantIds": {
      "bsonType": "array",
      "items": {
        "bsonType": "string"
      },
      "maxItems": 4
    },
    "started": {
      "bsonType": "bool"
    },
    "turn": {
      "bsonType": "object",
      "title": "Turn",
      "required": ["number", "participantId"],
      "properties": {
        "number": {
          "bsonType": "int",
          "minimum": 1
        },
        "participantId": {
          "bsonType": "string"
        }
      },
      "additionalProperties": false
    },
    "code": {
      "bsonType": "string",
      "pattern": "/^\\d{4}$/"
    },
    "guesses": {
      "bsonType": "array",
      "items": {
        "bsonType": "string",
        "pattern": "/^\\d{4}$/"
      }
    }
  },
  "additionalProperties": false
}